<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@mipmap/march"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">


    <TextView
        android:id="@+id/podglad_biblioteki_header"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/usunBiblioteke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"
            android:text="Usuń"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

        <Button
            android:id="@+id/dodajKsiazke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:background="@android:color/holo_blue_dark"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:text="Dodaj książkę"></Button>

        <Button
            android:id="@+id/dodajFilm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:background="@android:color/holo_blue_dark"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:text="Dodaj Film"></Button>

    </LinearLayout>

    <TextView
        android:id="@+id/filmy_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:text="Filmy"
        android:textAlignment="center"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/filmList"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:background="?android:attr/colorPressedHighlight" />

    <TextView
        android:id="@+id/ksiazki_label"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_dark"
        android:text="Ksiązki"
        android:textAlignment="center"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/bookList"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:background="?android:attr/colorPressedHighlight" />

</LinearLayout>
